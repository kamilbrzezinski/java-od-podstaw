        <Button onAction="#onAddButtonClick" text="Dodaj nowe zadanie" />
    </HBox>

    <ListView fx:id="todoList" />
    <Button onAction="#onDeleteButtonClick" text="UsuÅ„" />
    <Button onAction="#markAsDone" text="Oznacz jako wykonane" />
